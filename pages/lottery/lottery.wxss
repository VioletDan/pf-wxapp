/* pages/lottery/lottery.wxss */
/* ele */
.eles{position: absolute;top: 0;left: 0;width: 100%;height: 100%;
background-image: url(http://t.sky.be-xx.com/wxapp/2018/spdbccc-miniapp/images/lottery/bg.jpg)}
.eles .ele1{width: 174rpx;height: 310rpx;position: absolute;top: 160rpx;left: 0;
background-image: url(http://t.sky.be-xx.com/wxapp/2018/spdbccc-miniapp/images/lottery/ele1.png)}
.eles .ele2{width: 51rpx;height: 52rpx;position: absolute;left:50%;margin-left:-25rpx;top:50%;margin-top:-25rpx;
background-image: url(http://t.sky.be-xx.com/wxapp/2018/spdbccc-miniapp/images/lottery/ele2.png);}
.eles .ele3{width: 118rpx;height:121rpx;position: absolute;bottom: 384rpx;right: 40rpx;
background-image: url(http://t.sky.be-xx.com/wxapp/2018/spdbccc-miniapp/images/lottery/ele3.png);}
.eles .ele4{width: 487rpx;height:581rpx;position: absolute;bottom: 0;right: 0;
background-image: url(http://t.sky.be-xx.com/wxapp/2018/spdbccc-miniapp/images/lottery/ele4.png);}
.ani_bounce{-webkit-animation: ani_bounce 2s  0.2s infinite alternate;}
.ani_bounce2{-webkit-animation: ani_bounce 2s 0.4s infinite alternate;}
.ani_bounce3{-webkit-animation: ani_bounce 2s 0.6s infinite alternate;}

@-webkit-keyframes ani_bounce{
  0%{-webkit-transform: translateY(0);}
  100%{-webkit-transform: translateY(20rpx);}
}

/* prize */
.prize .wheelbox{width: 750rpx;height: 811rpx;margin: 120rpx auto 0;}
.prize .wheel1{width: 580rpx;height: 580rpx;position: absolute;top: 50%;left: 50%;margin-left: -285rpx;margin-top: -285rpx;
background-image: url(http://t.sky.be-xx.com/wxapp/2018/spdbccc-miniapp/images/lottery/wheel1.png);}
.prize .wheel2{width: 750rpx;height: 798rpx;position: absolute;top: 33rpx;left: 0; 
background-image: url(http://t.sky.be-xx.com/wxapp/2018/spdbccc-miniapp/images/lottery/wheel2.png);}
.prize .light1{width: 678rpx;height: 678rpx;position: absolute;top: 75rpx;left: 48rpx; 
background-image: url(http://t.sky.be-xx.com/wxapp/2018/spdbccc-miniapp/images/lottery/light1.png);}
.ani_light1{-webkit-animation: ani_light1 .3s infinite steps(1);}
@-webkit-keyframes ani_light1{
  0%{background-image: url(http://t.sky.be-xx.com/wxapp/2018/spdbccc-miniapp/images/lottery/light3.png);background-size: 100%;}
  60%{background-image: url(http://t.sky.be-xx.com/wxapp/2018/spdbccc-miniapp/images/lottery/light2.png);background-size: 100%;}
  100%{background-image: url(http://t.sky.be-xx.com/wxapp/2018/spdbccc-miniapp/images/lottery/light3.png);background-size: 100%;}
}

.prize .btnbox{width: 218rpx;height: 218rpx;position: absolute;top: 50%;left: 50%;margin-left: -104rpx;margin-top: -104rpx;}
.prize .btnbox .btn1{width: 100%;height: 100%;position: absolute;background-image: url(http://t.sky.be-xx.com/wxapp/2018/spdbccc-miniapp/images/lottery/pointer1.png);}
.prize .btnbox .btn2{width: 100%;height: 100%;position: absolute;background-image: url(http://t.sky.be-xx.com/wxapp/2018/spdbccc-miniapp/images/lottery/pointer2.png);}
.prize .btnbox:active .btn2{-webkit-transform: scale(.9);}
.prize .list{color: #fff;opacity: .3;padding-left: 22rpx;font-size: 26rpx;display: block;line-height:30rpx;}